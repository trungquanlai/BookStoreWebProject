@model ContosoUniversity.Models.SuppliersCategoriesBooksViewModel
<div class="books-search">
    <div class="container">
        <div class="row">
            <form asp-controller="Home" asp-action="Book" method="get">
                <div class="col-sm-6 col-md-3">
                    <div class="form-group">
                        <input asp-for="SearchString" value="@ViewData["CurrentFilter"]" type="text" class="form-control" id="keyword" placeholder="Book Title" />
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="btn-group">
                        <select asp-for="Category" asp-items="Model.CategoriesList" class="custom-select custom-select-sm form-control">
                            <option value="">Categories</option>
                        </select>
                    </div>
                </div>
                <div class="clearfix visible-sm"></div>
                <div class="col-sm-6 col-md-3">
                    <div class="btn-group">
                        <select asp-for="Supplier" asp-items="Model.SupplierList" class="custom-select custom-select-sm form-control">
                            <option value="" >Authors</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-6 col-md-3">
                    <div class="form-group">
                        <input type="hidden" />
                        <button type="submit" value="" class="btn btn-primary btn-block">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>